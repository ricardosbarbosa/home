<div style="background-color: #f5f5f5; padding: 0px 10px 10px 10px;" >

<%- model_class = Residencial -%>
<div class="page-header">

</div>
<%= form_tag(@residencial, :method=>'post', :multipart => true) do  %>

    <% if @residencial.errors.any? %>
        <div id="error_explanation" class="alert alert-error">
          
          <ul>
            <% @residencial.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <% if @sindico.errors.any? %>
        <div id="error_explanation" class="alert alert-error">
          <h2><%= pluralize(@sindico.errors.count, "erro") %>:</h2>

          <ul>
            <% @sindico.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div style="text-align: center; ">

        <div  class="alert alert-success">
          <h2 style="color: black;">Traga seu condomínio para o Oi Vizinho</h2>
        </div>

        <%= text_field_tag "residencial_nome", nil, :placeholder => "Condomínio",:size => 100,
                         :style => 'margin: 10px; padding: 20px 10px 20px 10px; width: 400px; font-size: 20px; text-align: center;color: #3a87ad' %>
        <div class="control-group">
            <%= text_field_tag "apartamento", nil, :placeholder => "Apto.: Ex: 101, A-204" , :style => 'text-align: center;'%>
            <%= email_field_tag "email", nil, :placeholder => "E-mail" , :style => 'text-align: center;'%>
        </div>


        <div class="form-actions">
            <%= submit_tag 'Criar meu condomínio' , :class => 'btn btn-primary'%>
            <%= link_to 'Cancelar', residenciais_path, :class => 'btn' %>
        </div>

        <div  class="alert alert-info">
            <b>Você receberá um email de confirmação para começar a usar e convidar seus vizinhos!</b> <br />
        </div>

    </div>
<% end %>

</div>

