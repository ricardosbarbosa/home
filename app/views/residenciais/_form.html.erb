<%= form_for @residencial, :html => { :class => 'form-horizontal' } do |f| %>
    <% if @residencial.errors.any? %>
        <div id="error_explanation" class="alert alert-error">
          <h2><%= pluralize(@residencial.errors.count, "erro") %>:</h2>

          <ul>
            <% @residencial.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="control-group">
      <%= f.label :nome, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :nome, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :regiao, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :regiao, :class => 'text_field' %>
      </div>
    </div>


    <div class="control-group">
      <%= f.label :cnpj, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :cnpj, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :banco, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :banco, {"Banco do Brasil" => "bb", 
          "Bradesco" => "bradesco", 
          "Caixa Econômica Federal" => "caixa",
          "HSBC" => "hsbc",
          "Itaú" => "itau",
          "Banco Real" => "real",
          "Unibanco" => "unibanco"}
          %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :agencia, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :agencia, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :conta, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :conta, :class => 'text_field' %>
      </div>
    </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to 'Cancelar',
                residenciais_path, :class => 'btn' %>
  </div>
<% end %>
