<%= form_for @comentario, :html => { :class => 'form-horizontal' } do |f| %>
    <% if @comentario.errors.any? %>
        <div id="error_explanation" class="alert alert-error">
          <h2><%= pluralize(@comentario.errors.count, "erro") %>:</h2>

          <ul>
            <% @comentario.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

  <div class="control-group">
    <%= f.label :titulo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :titulo, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :conteudo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :conteudo, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :comentavel_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :comentavel_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :comentavel_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :comentavel_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :user_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to 'Cancelar',
                comentarios_path, :class => 'btn' %>
  </div>
<% end %>
