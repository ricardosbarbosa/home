<%- model_class = Comentario -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:titulo) %></th>
      <th><%= model_class.human_attribute_name(:conteudo) %></th>
      <th><%= model_class.human_attribute_name(:comentavel_id) %></th>
      <th><%= model_class.human_attribute_name(:comentavel_type) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @comentarios.each do |comentario| %>
      <tr>
        <td><%= link_to comentario.id, comentario_path(comentario) %></td>
        <td><%= comentario.titulo %></td>
        <td><%= comentario.conteudo %></td>
        <td><%= comentario.comentavel_id %></td>
        <td><%= comentario.comentavel_type %></td>
        <td><%= comentario.user_id %></td>
        <td><%=l comentario.created_at %></td>
        <td>
          <%= link_to Editar,
                      edit_comentario_path(comentario), :class => 'btn btn-mini' %>
          <%= link_to Excluir,
                      comentario_path(comentario),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Confirmar?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Novo",
            new_comentario_path,
            :class => 'btn btn-primary' %>
