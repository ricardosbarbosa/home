<%- model_class = Area -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @area.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:residencial_id) %>:</strong></dt>
  <dd><%= @area.residencial_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              residencial_areas_path, :class => 'btn'  %>
  <%= link_to Editar,
              edit_residencial_area_path(@area.residencial, @area), :class => 'btn' %>
  <%= link_to Excluir,
              residencial_area_path(@area.residencial,@area),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Confirmar?')),
              :class => 'btn btn-danger' %>
</div>
