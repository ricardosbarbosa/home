<%- model_class = Area -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>

      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:dias_para_reserva) %></th>
      <th><%= model_class.human_attribute_name(:numero_maximo_de_reservas) %></th>


      <th><%=t '.actions', :default => 'Ações' %></th>
    </tr>
  </thead>
  <tbody>
    <% @areas.each do |area| %>
      <tr>

        <td><%= link_to area.nome, residencial_area_path(area.residencial, area) %></td>
        <td><%=  area.dias_para_reserva %></td>
        <td><%=  area.numero_maximo_de_reservas %></td>
        <td>
          <%= link_to 'Editar',
                      edit_residencial_area_path(area.residencial, area), :class => 'btn btn-mini' %>
          <%= link_to 'Excluir',
                      residencial_area_path(area.residencial, area),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Confirmar?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Novo",
            new_residencial_area_path,
            :class => 'btn btn-primary' %>
