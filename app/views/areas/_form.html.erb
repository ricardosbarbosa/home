

<%= form_for [@residencial, @area], :html => { :class => 'form-horizontal' } do |f| %>

    <% if @area.errors.any? %>
        <div id="error_explanation" class="alert alert-error">
          <h2><%= pluralize(@area.errors.count, "erro") %>:</h2>

          <ul>
            <% @area.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div class="control-group">
      <%= f.label :nome, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :nome, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :numero_maximo_de_reservas, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :numero_maximo_de_reservas, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :dias_para_reserva, :class => 'control-label' %>
      <div class="controls">
        <% Date::DAYNAMES.each do |dia| %>
            <div>
              <%= check_box_tag :dias_para_reserva, dia, @area.dias_para_reserva.include?(dia), :name => 'area[dias_para_reserva][]',
                                :style => 'float: left; margin-left: 5px' %> <%= label_tag :dias_para_reserva, dia %>
            </div>
        <% end %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :turnos_permitidos, :class => 'control-label' %>
      <div class="controls">
        <% ['ManhÃ£', 'Tarde', 'Noite'].each do |turno| %>
            <div>
              <%= check_box_tag :turno, turno, @area.turnos_permitidos.include?(turno), :name => 'area[turnos_permitidos][]',
                                :style => 'float: left; margin-left: 5px' %>
               <%= label_tag :turno, turno %>
            </div>
        <% end %>
      </div>
    </div>



  <!--<div class="control-group">-->
    <!--<%= f.label :residencial_id, :class => 'control-label' %>-->
    <!--<div class="controls">-->
      <!--<%= f.number_field :residencial_id, :class => 'number_field' %>-->
    <!--</div>-->
  <!--</div>-->

  <div class="form-actions">

    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to 'Cancelar',
                residencial_areas_path, :class => 'btn' %>
  </div>
<% end %>
