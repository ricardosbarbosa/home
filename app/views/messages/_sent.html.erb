<div class="page-header">
  <h1><%=t '.title', :default => "Enviadas" %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Deletar?</th>
      <th>Assunto</th>
      <th>Para</th>
      <th>Data de envio</th>
    </tr>
  </thead>
  <tbody>
	<% if @messages.size == 0 %>
		<tr>
			<td colspan="4">
				No messages
			</td>
		</tr>
	<% else %>
		<% for message in @messages %>
			<tr>
				<td><%= check_box_tag "delete[]", message.id %></td>
				<td><%= link_to h(message.subject), user_message_path(@user, message) %></td>
  				<td><%= link_to h(message.recipient.email), user_path(message.recipient) if message.recipient %></td>
			  <td><%=h message.created_at.to_s(:long) %></td>
			</tr>
		<% end %>
		<tr>
			<td colspan="4">
				<%= submit_tag "Delete" , :class => 'btn btn-danger'%>
			</td>
		</tr>
 	<% end %>
 </tbody>
</table>
<%= link_to "Inbox", user_messages_path(@user) , :class => 'btn btn-link'%>
