<%= form_for @message, :url => user_messages_path(@user) do |f| %>

    <% if @message.errors.any? %>
        <div id="error_explanation" class="alert alert-error">
          <h2><%= pluralize(@message.errors.count, "erro") %>:</h2>

          <ul>
            <% @message.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div class="control-group">
      <%= f.label :to, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :to, @usuarios.map {|u| [u.email,u.id] },{}, {} %>
      </div>
    </div>
     <div class="control-group">
      <%= f.label :subject, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :subject, :class => 'text_field' %>
      </div>
    </div>
     <div class="control-group">
      <%= f.label :body, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :body, :class => 'text_field', :rows => '3' %>
      </div>
    </div>

<div class="form-actions">
    <%= f.submit 'Enviar' , :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                root_path, :class => 'btn' %>
  </div>

<% end %>