<%- model_class = Arquivo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:titulo) %></th>
      <th><%= model_class.human_attribute_name(:descricao) %></th>
      <th><%= model_class.human_attribute_name(:file) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @arquivos.each do |arquivo| %>
      <tr>
        <td><%= link_to arquivo.id, arquivo_path(arquivo) if permitted_to? :show, arquivo%></td>
        <td><%= arquivo.titulo %></td>
        <td><%= arquivo.descricao %></td>
        <td><%= link_to "abrir arquivo", arquivo.file.url %></td>
        <td><%=l arquivo.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_arquivo_path(arquivo), :class => 'btn btn-mini'if permitted_to? :edit, arquivo %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      arquivo_path(arquivo),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger'if permitted_to? :destroy, arquivo %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_arquivo_path,
            :class => 'btn btn-primary'if permitted_to? :new, Arquivo.new %>
