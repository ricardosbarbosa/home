<!DOCTYPE html>
<html lang="en">
  <head>

    <style>
        <%  if not user_signed_in? %>
        body {

            background: url(./assets/bg.jpg) no-repeat center center fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;

            background-color: #efefef;

            /*-webkit-background-size:cover;*/
            /*background-attachment:fixed;*/
            /*background-image:url(http://css-tricks.com/examples/FullPageBackgroundImage/images/bg.jpg);*/
            /*background-position:50% 50%;*/
            /*background-repeat:no-repeat no-repeat;*/
            /*background-size:cover;*/
        }
      <% end %>
    </style>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Home" %></title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <!--<script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>-->
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>

    <!-- For third-generation iPad with high-resolution Retina display: -->
    <!-- Size should be 144 x 144 pixels -->
    <%= favicon_link_tag 'images/apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144' %>

    <!-- For iPhone with high-resolution Retina display: -->
    <!-- Size should be 114 x 114 pixels -->
    <%= favicon_link_tag 'images/apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114' %>

    <!-- For first- and second-generation iPad: -->
    <!-- Size should be 72 x 72 pixels -->
    <%= favicon_link_tag 'images/apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72' %>

    <!-- For non-Retina iPhone, iPod Touch, and Android 2.1+ devices: -->
    <!-- Size should be 57 x 57 pixels -->
    <%= favicon_link_tag 'images/apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png' %>

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag 'images/favicon.ico', :rel => 'shortcut icon' %>


  </head>
  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">
            <%  if user_signed_in? %>
                    <%  if current_user.apartamento  %>
                        <%= link_to (current_user.apartamento.residencial.nome), root_path, :class => "brand" %>
                      <% else %>
                Residencial Online
                    <% end %>
            <% else %>
                Residencial Online
                <% end %>
                    </a>
          <div class="container nav-collapse">
            <%  if user_signed_in? %>
                <ul class="nav">
                  <!--<li><%= link_to  "Residenciais", residenciais_path if  (permitted_to? :create, :residenciais) %></li>-->
                </ul>
                <ul class="nav pull-right">
                 <% if current_user.apartamento %>
                 <li> <%= link_to current_user.email, edit_residencial_apartamento_user_path(current_user.apartamento.residencial,current_user.apartamento,current_user) if  (permitted_to? :edit, current_user) %>
                 <% end %>

                 </li>
                  <li class="active"><%= link_to "Sign out", destroy_user_session_path, :method => :delete %> </li>

                </ul>
            <% else %>

                <ul class="nav pull-right">
                  <li class="active">
                    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-inline' }) do |f| %>

                        <%= f.email_field :email, :placeholder=>"E-mail",  :class=> "input-medium" %>

                        <%= f.password_field :password, :placeholder=>"Senha", :class=> "input-medium" %>
                        
                        <%= f.submit "Sign in" , :class => "btn btn-danger btn-mini"%>
                        <br />

                        <% if devise_mapping.rememberable? -%>
                            <%= f.check_box :remember_me %> <%= f.label :remember_me %>
                        <% end -%>

                        
                        <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "Esqueceu a senha?", new_password_path(resource_name) %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Confirmação por email?", new_confirmation_path(resource_name) %>
<% end -%>
                    <% end %>
                  </li>

                </ul>
            <% end %>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container" >
      <div class="content" style="min-height: 450px">
        <div class="row">
           <div class=<%  if user_signed_in? %>"span9"<% else %> "span12" <% end %> >
             <% flash.each do |name, msg| %>
                 <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
                   <a class="close" data-dismiss="alert">&#215;</a>
                   <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
                 </div>
             <% end %>
              <%= yield %>
            </div>
          <%  if user_signed_in? %>
            <div class="span3">
              <div class="well sidebar-nav">

                <% if has_role? :admin %>
                    <ul class="nav nav-list">
                      <li class="nav-header">Administrtivo</li>
                      <li><%= link_to "Residenciais", residenciais_path %></li>
                    </ul>
                <% end %>

                <% if has_role? :condomino %>
                    <ul class="nav nav-list">
                      <li><%= link_to "Home", root_path %></li>
                      <li><%= link_to "Eventos", eventos_path %></li>
                      <li><%= link_to "Arquivos", arquivos_path %></li>
                    </ul>
                <% end %>
              </div><!--/.well -->
            </div><!--/span-->
          <% end %>
        </div><!--/row-->
      </div><!--/content-->


    <footer>
      <div class="width_wrap">
        <div class="left">
          <nav>
            <ul>
              <li><a href="/about">About</a></li>
              <li><a href="/explore">Explore</a></li>

              <li><a href="/help/guidelines">Guidelines</a></li>
              <li><a href="/blog">Blog</a></li>

              <li><a href="/jobs">Jobs</a></li>
              <li><a href="#">Developers</a></li>
            </ul>
          </nav>

          <div id="footers_footer">
            <div id="legal">
              <p>© 2012 Residencial Online . All rights reserved.</p>
              <ul>
                <li>
                  <!--<a href="/terms" title="Terms &amp; Conditions">-->
                    <!--Terms                </a>-->
                </li>
                <li>
                  <!--<a href="/privacy" title="Privacy Policy">-->
                    <!--Privacy                </a>-->
                </li>
                <li>
                  <!--<a href="/dmca" title="Copyright Information">-->
                    <!--Copyright                </a>-->
                </li>
                <li>
                  <!--<a href="/site_map" title="Site Map">-->
                    <!--Site Map                </a>-->
                <!--</li>-->
              </ul>
              <p class="with_love">
                Made with <a href="/love" class="iconify loveo" title="Love">♥</a> in <abbr title="João Pessoa - Paraíba - Brasil">JP-PB-BRASIL</abbr>.        </p>
            </div>



          </div>
        </div>
      </div>
    </footer>


    </div> <!-- /container -->

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>

  </body>
</html>
